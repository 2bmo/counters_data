<%= render "shared/header" %>
<main class="dashboard">
  <%= render "customers/shared/menu" %>
  <div class="content">
    <h2>Редактировать данные профиля</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :login, "Логин" %><br />
        <%= f.text_field :login, autofocus: true, autocomplete: "login", required: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, "Новый пароль" %> <i>(Оставьте пустым если не хотите изменить)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> знаков минимум</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Подтвердите пароль" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "Текущий пароль" %> <i>(Чтобы сохранить изменения требуется текущий пароль)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Обновить" %>
      </div>
    <% end %>

    <h3>Удалить аккаунт</h3>

    <p>Удалить аккаунт? <%= button_to "Удалить безвозвратно", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete %></p>

    <%= link_to "Назад", admin_root_path %>
  </div>
</main>
<%= render "shared/footer" %>
