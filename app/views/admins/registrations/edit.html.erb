<%= render "shared/header" %>
<main class="dashboard">
  <%= render "admins/shared/menu" %>
  <div class="content">
    <h2>Редактировать данные профиля</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.label :login, "Логин", class: "form__label" %>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", required: true, class: "form__input" %>
      </div>

      <div>
        <%= f.label :email, class: "form__label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Требуется подтверждение почты: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div>
        <%= f.label :password, "Новый пароль", class: "form__label" %> <i>(Оставьте пустым, если не хотите изменить)</i>
        <%= f.password_field :password, autocomplete: "off", class: "form__input" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> знаков минимум</em>
        <% end %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Подтвердите пароль", class: "form__label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form__input" %>
      </div>

      <div>
        <%= f.label :current_password, "Текущий пароль", class: "form__label" %> <i>(Чтобы сохранить изменения требуется текущий пароль)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Обновить", class: "form__button" %>
      </div>
    <% end %>

    <h3>Удалить аккаунт</h3>
    <div class="form">
        <p>Удалить аккаунт? <%= button_to "Удалить безвозвратно", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: "form__button" %></p>
        <%= link_to "Назад", admin_root_path, class: "form__button" %>
    </div>

  </div>
</main>
<%= render "shared/footer" %>
