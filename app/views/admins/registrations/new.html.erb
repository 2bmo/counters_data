<%= render "shared/header" %>
<main class="dashboard">
  <%= render "admins/shared/menu" %>
  <div class="content">
    <h2>Новый администратор</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form"}) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.label :login, "Логин", class: "form__label" %>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", required: true, class: "form__input" %>
      </div>

      <div>
        <%= f.label :email, class: "form__label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form__input" %>
      </div>

      <div>
        <%= f.label :password, "Пароль", class: "form__label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> знаков минимум)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form__input" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Повторите пароль", class: "form__label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Создать", class: "form__button" %>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>
  </div>
</main>
<%= render "shared/footer" %>
