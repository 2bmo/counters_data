<%= render "shared/header" %>
<main class="dashboard">
  <%= render "admins/shared/menu" %>
  <div class="content">
    <h1>Статистика</h1>
    <h5>Наибольшие потребители воды</h5>
    <div class="tabs">
      <ul class="tabs__menu">
        <li class="tabs__link tabs__link_active">Холодная вода</li>
        <li class="tabs__link">Горячая вода</li>
      </ul>
      <div class="tabs__content tabs__content_active">
        <table class="table">
          <thead>
            <tr>
              <th class="table__th">Фамилия</th>
              <th class="table__th">Имя</th>
              <th class="table__th">Значение</th>
            </tr>
          </thead>
          <tbody>
          <% @customers = Customer.order(last_name: :desc).limit(3) %>
          <% @customers.each do |customer| %>
            <tr>
              <td class="table__td"><%= customer.last_name %></td>
              <td class="table__td"><%= customer.first_name %></td>
              <td class="table__td"></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
