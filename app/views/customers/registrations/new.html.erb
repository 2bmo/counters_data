<%=  render "shared/header" %>
<% if admin_signed_in? %>
<main class="dashboard">
  <%= render "admins/shared/menu" %>
  <div class="content">
    <h2>Новый пользователь</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name, "Имя" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true %>
      </div>

      <div class="field">
        <%= f.label :last_name, "Фамилия" %><br />
        <%= f.text_field :last_name, autocomplete: "last_name", required: true %>
      </div>

      <div class="field">
        <%= f.label :address, "Адрес" %><br />
        <%= f.text_field :address, required: true %>
      </div>

      <div class="field">
        <%= f.label :login, "Логин" %><br />
        <%= f.text_field :login, required: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, required: true %>
      </div>

      <div>
        <%= f.password_field :password, type: "hidden", label: "false" %>
      </div>

      <div>
        <%= f.password_field :password_confirmation, type: "hidden", label: "false" %>
      </div>

      <div class="actions">
        <%= f.submit "Создать" %>
      </div>
    <% end %>
    <%= render "customers/shared/links" %>
  </div>
</main>
<%= render "shared/footer" %>
<% else %>
  <script> window.location.href="/admins/sign_in" </script>
<% end %>