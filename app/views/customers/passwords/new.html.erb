<%= render "shared/header" %>
<main>
  <h2>Забыли пароль?</h2>
  <div class="index">
    <div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form" }) do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.label :email, class: "form__label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input" %>
        </div>

        <div class="actions">
          <%= f.submit "Отправить письмо", class: "form__button" %>
        </div>
      <% end %>

      <%= render "customers/shared/links" %>
    </div>
  </div>
</main>
<%= render "shared/footer" %>