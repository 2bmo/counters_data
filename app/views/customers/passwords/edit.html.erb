<%= render "shared/header" %>
<main>
  <h2>Изменить пароль</h2>
  <div class="index">
    <div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div>
          <%= f.label :password, "Новый пароль", class: "form__label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> знаков минимум)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form__input" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Подтвердите пароль", class: "form__label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form__input" %>
        </div>

        <div class="actions">
          <%= f.submit "Изменить пароль", class: "form__button" %>
        </div>
      <% end %>

      <%= render "customers/shared/links" %>
    </div>
  </div>
</main>
<%= render "shared/footer" %>